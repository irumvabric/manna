on:
  push:
    branches:
      - main
name: ðŸš€ Deploy Application on push
jobs:
  web-deploy:
    name: ðŸŽ‰ Deploy
    runs-on: ubuntu-latest
    steps:
    - name: ðŸšš Get latest code
      uses: actions/checkout@v3

    - name: ðŸ“‚ Sync files
      uses: SamKirkland/FTP-Deploy-Action@v4.3.4
      with:
        server: ${{ github.secrets.SERVER }}
        username: ${{ github.secrets.FTP_ACCOUNT }}
        password: ${{ github.secrets.FTP_ACCOUNT_PASSWORD }}
        server-dir: ./